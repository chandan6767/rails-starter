<div class="flex-1 p-[5vw] space-y-4">
  <div class="border-b pb-4 flex justify-between">
    <div>
      <h1 class="font-bold text-4xl">Home#index</h1>
      <p>Find me in <code class="font-mono border px-1 bg-amber-50">app/views/home/index.html.erb</code></p>
    </div>
    <div data-controller="clock">
      <p data-clock-target="output"></p>
    </div>
  </div>

  <div data-controller="counter" class="flex flex-col gap-4 justify-center items-center">
    <p data-counter-target="output" class="text-6xl font-bold text-pink-700">0</p>
    <%= render(ButtonComponent.new(
      text: "Increment", 
      onclick: "console.log('Hello!')", 
      variant: "primary", 
      classes: "rounded-0", 
      data: { action: "click->counter#increment" }
    )) %>
  </div>
</div>
